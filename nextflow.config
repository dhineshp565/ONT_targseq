manifest {
	homePage = 'https://github.com/dhineshp565/ONT_ampliconseq'
    description = 'Pipeline for generating consensus from ONT targeted amplicon sequencing'
	author= 'dhineshp565'
    mainScript = 'main.nf'
    version = "v1.0.0"
	nextflowVersion= '>=22.12.0-edge'
	manifest.defaultBranch = "main"
	name = 'ONT_ampliconseq'
}

params {

    	input='filepath'
    	out_dir= null			
		kraken_db= null
		trim_barcodes= null
	
}


profiles {
    
	standard{
		docker {
			includeConfig 'config/docker.config'
			docker.enabled=true
		}
	}
}


process {
	withLabel:low {
		cpus= 1
	 	memory= 2.GB
	 	time= 2.h
	 }
	 withLabel:medium {
	 	cpus=2
	 	memory= 4.GB
		time= 4.h
	 }
	 withLabel:high {
	 	cpus=3
	 	memory=9.GB
	 	time= 8.h
	 }
}

timeline {
  enabled = true
  overwrite = true
  file = "${params.out_dir}/execution/timeline.html"
}
report {
  enabled = true
  overwrite = true
  file = "${params.out_dir}/execution/report.html"
}
trace {
  enabled = true
  overwrite = true
  file = "${params.out_dir}/execution/trace.txt"
}
