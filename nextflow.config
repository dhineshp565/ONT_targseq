manifest {
	homePage = 'https://github.com/dhineshp565/ONT_targseq'
   	description = 'Pipeline for generating consensus sequence and typing from targeted amplicon sequencing using Oxford Nanopore Technologies'
	author= 'dhineshp565'
   	mainScript = 'main.nf'
   	version = "v1.2.0"
	nextflowVersion= '>=22.12.0-edge'
	manifest.defaultBranch = "main"
	name = 'ONT_targseq'
}

params {

    	input='filepath'
    	out_dir= "output"
	reference = "${baseDir}/reference.fasta"	
	kraken_db= '/data/referenceDB/kraken/k2_pluspf_08gb_20230605'
	trim_barcodes= null
	read_count_threshold= 10
	medaka_model= 'r1041_e82_400bps_sup_g615'
}


profiles {
    
	standard{
		docker {
			includeConfig 'config/docker.config'
			docker.enabled=true
		}
	}
}


process {
	withLabel:low {
		cpus= 1
	 	memory= 2.GB
	 	time= 2.h
	 }
	 withLabel:medium {
	 	cpus=2
	 	memory= 4.GB
		time= 4.h
	 }
	 withLabel:high {
	 	cpus=3
	 	memory=9.GB
	 	time= 8.h
	 }
}

timeline {
  enabled = true
  overwrite = true
  file = "${params.out_dir}/execution/timeline.html"
}
report {
  enabled = true
  overwrite = true
  file = "${params.out_dir}/execution/report.html"
}
trace {
  enabled = true
  overwrite = true
  file = "${params.out_dir}/execution/trace.txt"
}
